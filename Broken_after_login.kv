Screen:

    MDCard:
        size_hint: None, None
        size: 300, 500
        pos_hint: {'center_x': .5, 'center_y': .5}
        elevation: 10
        padding: 25
        spacing: 25
        orientation: 'vertical'

        MDLabel:
            id: welcome_label
            text: 'lost'
            font_size: 40
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: 40

        MDTextFieldRound
            id: user
            hint_text: 'usernamhe'
            icon_right: 'account'
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {'center_x': .5}

        MDTextFieldRound
            id: password
            hint_text: 'password'
            icon_right: 'eye-off'
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {'center_x': .5}        

        MDRoundFlatButton:
            text: 'Login'
            font_size: 12
            pos_hint: {'center_x': .5}
            on_press: app.login()

        MDRoundFlatButton:
            text: 'Clear'
            font_size: 12
            pos_hint: {'center_x': .5}
            on_press: app.clear()

        Widget:
            size_hint_y: None
            height: 10
